{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,

    "preserveWatchOutput": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "esnext"],

    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src/"],
  "exclude": ["./src/**/*.test.ts"]
}
